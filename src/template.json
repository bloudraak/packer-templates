{
    "builders": [
        {
            "type": "vmware-iso",
			"boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
            ],
            "boot_wait": "10s",
            "iso_url": "http://192.168.1.4/depot/oracle/linux/7.2/V100082-01.iso",
            "iso_checksum": "3b9d65d26576921372b1b35b03fd791d",
            "iso_checksum_type": "md5",
            "headless": false,
			"http_directory": "http",
            "guest_os_type": "oraclelinux-64",
            "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/poweroff.sh; echo 'vagrant'|sudo -S sh '/tmp/poweroff.sh'",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "version": 11,
            "disk_size": 65536,
            "vmx_data": {
                "displayName": "Oracle Enterprise Linux 64-bit Packer Template",
                "memsize": "1024",
                "numvcpus": "1",
                "cpuid.coresPerSocket": "1"
            }
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "../dist/oracle-linux-7-02-amd64-{{.Provider}}.box"
        }
    ],
   "provisioners": [
   {
            "type": "shell",
            "execute_command": "echo 'vagrant' |sudo -S sh '{{.Path}}' ",
            "override": {
                "vmware-iso": {
                    "scripts": [
                        "scripts/base.sh",
                        "scripts/vagrant.sh",
                        "scripts/vmware.sh",
                        "scripts/cleanup.sh"
                    ]
                }
            }
        }
  ]
}